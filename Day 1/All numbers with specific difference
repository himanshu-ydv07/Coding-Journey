class Solution {
public:
    long long digitSum(long long x) {
        long long sum = 0;
        while (x > 0) {
            sum += x % 10;
            x /= 10;
        }
        return sum;
    }

    int getCount(int n, int d) {
        long long left = 1, right = n;
        long long firstValid = n + 1;

        while (left <= right) {
            long long mid = left + (right - left) / 2;

            if (mid - digitSum(mid) >= d) {
                firstValid = mid;
                right = mid - 1;
            } else {
                left = mid + 1;
            }
        }

        if (firstValid == n + 1)
            return 0;

        return (int)(n - firstValid + 1);
    }
};
